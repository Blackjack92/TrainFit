                                <Image Grid.Column="0" Grid.RowSpan="2" Source="{Binding ImageSource}" />
                                <Controls:LabelTextBlock  Grid.Row="0" Grid.Column="1" Label="Name: " Text="{Binding Exercise.Name, Mode=OneWay}" IsReadOnly="True" />
                                <Controls:LabelTextBlock Grid.Row="1" Grid.Column="1" Label="Difficulty: " Text="{Binding Exercise.Difficulty, Mode=OneWay}" IsReadOnly="True" />
                            </Grid>
                        </ContentControl>
                    </DataTemplate>
