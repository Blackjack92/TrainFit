<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TrainFit.Styling">

    <!-- TODO: Add shared dictionary: http://www.wpftutorial.net/MergedDictionaryPerformance.html -->
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="BaseStyles.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <!-- Menubar -->
    <LinearGradientBrush x:Key="BaseTheme.Menubar" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="{StaticResource BaseColor.Gray}" />
        <GradientStop Color="{StaticResource BaseColor.Black}" Offset="0.75"/>
    </LinearGradientBrush>

    <!-- Images -->
    <BitmapImage x:Key="BaseImage.Logo" UriSource="../Images/Logo-dark.jpg" />
</ResourceDictionary>
