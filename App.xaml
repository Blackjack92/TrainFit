<storeApps:MvvmAppBase x:Class="TrainFit.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TrainFit"
    xmlns:storeApps="using:Microsoft.Practices.Prism.Mvvm">

    <!--Application Resources-->
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styling/BaseStyles.xaml" x:Name="BaseStyles" />
                <ResourceDictionary Source="Styling/BaseStylesLight.xaml" x:Name="BaseStyles.Light" />
                <ResourceDictionary Source="Styling/BaseStylesDark.xaml" x:Name="BaseStyles.Dark" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>

</storeApps:MvvmAppBase>

